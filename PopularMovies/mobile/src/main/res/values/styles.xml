<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent="MaterialTheme.Base">
        <!--item name="colorAccent">@color/floating_action_button_color</item-->
        <!-- Customize your theme here. -->
    </style>
    <!-- Base theme applied no matter what API -->
    <!-- From https://github.com/xamarin/monodroid-samples/tree/master/Supportv7/AppCompat/Toolbar/Supportv7Toolbar/Resources/values -->
    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#2196F3</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FF4081</item>

        <item name="colorControlHighlight">#FF4081</item>
        <!-- You can also set colorControlNormal, colorControlActivated
           colorControlHighlight and colorSwitchThumbNormal. -->
    </style>
    <!--style name="TabTheme" parent="Theme.AppCompat.NoActionBar">
        <!- -item name="windowActionBar">false</item -->  <!-- so we can do tab toolbar for reviews / videos - ->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style-->
    <!--Display  White text over a background image with black shadow to make it stand out -->
    <style name="DetailShadowedText">
        <item name="android:textStyle">bold</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">0.0</item>
    <item name="android:shadowDy">0.0</item>
    <item name="android:shadowRadius">20.0</item>

    </style>
</resources>
