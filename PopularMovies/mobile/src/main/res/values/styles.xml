<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent="MaterialTheme.Base">
        <!--item name="colorAccent">@color/floating_action_button_color</item-->
        <!-- Customize your theme here. -->
    </style>
    <!-- Base theme applied no matter what API -->
    <!-- From https://github.com/xamarin/monodroid-samples/tree/master/Supportv7/AppCompat/Toolbar/Supportv7Toolbar/Resources/values -->
    <!-- Turn off normal application bar so we can put our toolbars where we please.
         Do this by replacing "Theme.AppCompat.Light.DarkActionBar" with NoActionBar
         per http://www.truiton.com/2015/04/android-action-bar-dialog-using-toolbar/ -->
    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the Blue 500 default action bar background -->
        <item name="colorPrimary">#2196F3</item>
        <!-- colorPrimaryDark is used for the Blue 700 status bar -->
        <item name="colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FF4081</item>

        <item name="colorControlHighlight">#FF4081</item>
        <!-- You can also set colorControlNormal, colorControlActivated
           colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>

    </style>
    <!--style name="TabTheme" parent="Theme.AppCompat.NoActionBar">
        <!- -item name="windowActionBar">false</item -->  <!-- so we can do tab toolbar for reviews / videos - ->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
           <item name="actionMenuTextColor">@android:color/holo_blue_dark</item>
    </style-->
    <!--Display  White text over a background image with black shadow to make it stand out -->
    <style name="DetailShadowedText">
        <item name="android:textStyle">bold</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">0.0</item>
    <item name="android:shadowDy">0.0</item>
    <item name="android:shadowRadius">20.0</item>

    </style>
    <style name="TransparentBackground">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>
</resources>
